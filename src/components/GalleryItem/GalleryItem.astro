---
const {image} = Astro.props;
---

<a class="gallery_item" data-fancybox="gallery" href={image}>
  <div class="gallery_item__overlay">
    <img src="/icons/search.svg" alt="">
  </div>
  <img src={image}  />
</a>


<style>
  .gallery_item {
    position: relative;
    width: 100%;
    height: 270px;
    overflow: hidden;
    border-radius: 15px;
  }
  .gallery_item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all .4s cubic-bezier(.42, 0, .58, 1);
  }
  .gallery_item .gallery_item__overlay {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, .45);
    z-index: 99;
    opacity: 0;
    transition: all .4s cubic-bezier(.42, 0, .58, 1);
  }

  .gallery_item .gallery_item__overlay img{
    width: 30px;
    height: 30px;
  }
  .gallery_item:hover .gallery_item__overlay{
    opacity: 1;
  }
  .gallery_item:hover img{
    transform: scale(1.1);
  }
  @media screen and (max-width: 991px) {
    .gallery_item {

    height: 270px;

  }
}
@media screen and (max-width: 768px) {
    .gallery_item {

    height: 160px;

  }
}
</style>


